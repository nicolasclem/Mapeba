@model Mapeba.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}


<h3>Crear Nueva categoria</h3>

<form asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row mb-4">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Nombre"></label>
                    </label>
                 </div>
                 <div class="col-8 ">
                     <input asp-for="Nombre" class="form-control" />
                     <span asp-validation-for="Nombre" class="text-danger"></span>
                 </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-8">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row m-4">
               <div class="col-8">
                    <partial name="_CrearVolver" />
                </div>
            </div>
        </div>

    </div>
</form>